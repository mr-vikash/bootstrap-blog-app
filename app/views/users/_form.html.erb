<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @user  %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 form-bg rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter you username" %>
          </div>
        </div>
        <div class="form-group row mt-2">
        <%= f.label :email, class: "col-2 col-form-label text-light" %>
        <div class="col-10"> 
            <%= f.text_field :email, class: "form-control shadow rounded", placeholder: "Enter your email" %>
        </div>
        </div>
        <div class="form-group row mt-2">
        <%= f.label :password, class: "col-2 col-form-label text-light" %>
        <div class="col-10"> 
            <%= f.text_field :password, rows: 8, class: "form-control shadow rounded", placeholder: "Choose your password" %>
        </div>
        </div>
        <div class="form-group text-center mt-2">
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update", class: "btn btn-outline-light mt-4") %>
        </div>
      <% end %>
    </div>
    <div class="text-center">
          <%= link_to 'Go to all articles', articles_path, class: "btn btn-outline-info  text-center" %>
        </div>
  </div>
</div>
