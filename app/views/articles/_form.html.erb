<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 form-bg rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>
         <div class="form-group row mt-2">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 8, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>
        <div class="form-group text-center mt-2">
          <%= f.submit class: "btn btn-outline-light " %>
        </div>
      <% end %>
    </div>
    <div class="text-center">
          <%= link_to 'Go to all articles', articles_path, class: "btn btn-outline-info  text-center" %>
        </div>
  </div>
</div>
